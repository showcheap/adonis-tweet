{% extends 'master' %}

{% block content %}
<div class="container">
    <div class="col-md-8 offset-md-2" style="margin-top: 10px">
        <div class="text-center">
            <h4>{{ user.name }}</h4>
            <h6 class="text-muted">@{{ user.username }}</h6>
        </div>

        {% if posts.length <= 0 %}
        <p>Opps, no tweets here.</p>
        {% endif %}
        
        {% for post in posts %}
        <div class="card" style="margin-bottom: 10px">
          <div class="card-block">
            <p class="card-title">
              <strong>{{ post.user.name | title }}</strong> <a href="{{ 'user:show' | route({username: post.user.username })}}" class="text-muted">@{{ post.user.username }}</a>
            </p>
            <p class="card-text">{{ post.text }}</p>
          </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}